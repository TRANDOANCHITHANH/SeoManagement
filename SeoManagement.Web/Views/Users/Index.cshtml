@model SeoManagement.Web.Models.ViewModels.PagedResultViewModel<SeoManagement.Core.Entities.ApplicationUser>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách người dùng</h4>
                <p class="card-description">Quản lý thông tin người dùng</p>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Items)
                            {
                                <tr>
                                    <td>@user.Id</td>
                                    <td>@user.FullName</td>
                                    <td>@user.Email</td>
                                    <td></td>
                                    <td>@user.CreatedDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <label class="badge badge-success">Active</label>
                                        }
                                        else
                                        {
                                            <label class="badge badge-danger">Inactive</label>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-sm btn-info">Xem</a>
                                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning">Sửa</a>
                                        <button onclick="confirmDelete(@user.Id)" class="btn btn-sm btn-danger">Xóa</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="pagination mt-3">
                    <p>Trang @Model.PageNumber / @Model.TotalPages (Tổng: @Model.TotalItems người dùng)</p>
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize })">Trang trước</a>
                                </li>
                            }
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize })">Trang sau</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm("Bạn có chắc chắn muốn xóa người dùng này?")) {
                window.location.href = '@Url.Action("Delete", "Users")/' + id;
            }
        }
    </script>
}