@model SeoManagement.Web.Models.ViewModels.PagedResultViewModel<SeoManagement.Web.Models.ViewModels.SEOProjectViewModel>
@using SeoManagement.Web.Models.ViewModels

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Danh sách dự án SEO</h4>
                <p class="card-description">Quản lý các dự án SEO</p>
                <div class="mb-3">
                    <a asp-action="Create" class="btn btn-primary">Tạo dự án mới</a>
                </div>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên dự án</th>
                                <th>Mô tả</th>
                                
                                <th>Ngày bắt đầu</th>
                                <th>Trạng thái</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var project in Model.Items)
                            {
                                <tr>
                                    <td>@project.ProjectID</td>
                                    <td>@project.ProjectName</td>
                                    <td>@project.Description</td>
                                 
                                    <td>@project.StartDate</td>
                                    <td>
                                        @switch (project.Status)
                                        {
                                            case ProjectStatus.Active:
                                                <span class="badge bg-success">Hoạt động</span>
                                                break;
                                            case ProjectStatus.Completed:
                                                <span class="badge bg-secondary">Đã hoàn thành</span>
                                                break;
                                            case ProjectStatus.Pending:
                                                <span class="badge bg-warning">Chờ xử lý</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@project.ProjectID" class="btn btn-sm btn-info">Xem</a>
                                        <a asp-action="Edit" asp-route-id="@project.ProjectID" class="btn btn-sm btn-warning">Sửa</a>
                                        <button onclick="confirmDelete(@project.ProjectID)" class="btn btn-sm btn-danger">Xóa</button>
                                    </td>

                                    <td>
                                        <form asp-action="UpdateStatus" method="post">
                                            <input type="hidden" name="id" value="@project.ProjectID" />
                                            <select name="status" class="form-select-sm"
                                                    onchange="this.form.submit()"
                                            @(project.Status == ProjectStatus.Completed ? "disabled" : "")>
                                                <option value="Active" selected="@(project.Status == ProjectStatus.Active)">Hoạt động</option>
                                                <option value="Pending" selected="@(project.Status == ProjectStatus.Pending)">Chờ xử lý</option>
                                                <option value="Completed">Hoàn thành</option>
                                            </select>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="pagination mt-3">
                    <p>Trang @Model.PageNumber / @Model.TotalPages (Tổng: @Model.TotalItems dự án)</p>
                    <nav aria-label="Page navigation">
                        <ul class="pagination">
                            @if (Model.PageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber - 1, pageSize = Model.PageSize })">Trang trước</a>
                                </li>
                            }
                            @if (Model.PageNumber < Model.TotalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = Model.PageNumber + 1, pageSize = Model.PageSize })">Trang sau</a>
                                </li>
                            }
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id) {
            if (confirm("Bạn có chắc chắn muốn xóa dự án này?")) {
                window.location.href = '@Url.Action("Delete", "SEOProjects")/' + id;
            }
        }
    </script>
}