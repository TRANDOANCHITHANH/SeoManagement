@model SeoManagement.Web.Models.ViewModels.SEOProjectViewModel

@{
    ViewData["Title"] = "Tạo dự án kiểm tra On Page";
}

<h2>Tạo dự án Index Checker</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form asp-action="CreateSEOOnPageProject" method="post">
    @* <div asp-validation-summary="All" class="text-danger"></div> *@
    <input type="hidden" asp-for="ProjectType" value="SEOOnPage" />
    <div class="form-group">
        <label asp-for="ProjectName">Tên dự án</label>
        <input asp-for="ProjectName" class="form-control" required />
        <span asp-validation-for="ProjectName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Mô tả</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="StartDate">Ngày bắt đầu</label>
        <input asp-for="StartDate" type="date" class="form-control" required />
        <span asp-validation-for="StartDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EndDate">Ngày kết thúc</label>
        <input asp-for="EndDate" type="date" class="form-control" />
        <span asp-validation-for="EndDate" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Status">Trạng thái</label>
        <select asp-for="Status" class="form-control">
            <option value="0">Active</option>
            <option value="1">Completed</option>
            <option value="2">Pending</option>
        </select>
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Tạo dự án</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}