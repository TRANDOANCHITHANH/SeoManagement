@using SeoManagement.Web.Models.ViewModels
@model PagedResultViewModel<SeoManagement.Web.Models.ViewModels.ProjectSelectionViewModel>
@{
    ViewData["Title"] = "Chọn Dự án để Theo dõi Hiệu suất";
}

<div class="container py-4">
    <h2 class="text-center mb-4 fw-bold">Chọn Dự án để Theo dõi Hiệu suất</h2>

    <div class="mb-3">
        <form asp-action="SelectProject" method="get" class="d-flex">
            @Html.DropDownList("projectType", ViewBag.ProjectTypes as SelectList, new { @class = "form-select me-2", @onchange = "this.form.submit()" })
        </form>
    </div>

    <div class="card shadow p-4 mb-4">
        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="urlTable">
                <thead>
                    <tr>
                        <th>Tên Dự án</th>
                        <th>Loại Dự án</th>
                        <th>Ngày Bắt đầu</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var project in Model.Items)
                    {
                        <tr>
                            <td>@project.ProjectName</td>
                            <td>@project.ProjectType</td>
                            <td>@project.StartDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <a asp-action="Index" asp-route-projectId="@project.ProjectId" class="btn btn-primary btn-sm">Xem Hiệu suất</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <a asp-action="Index" asp-controller="SEOProjects" class="btn btn-secondary mt-3">Quay lại</a>
    </div>
</div>
