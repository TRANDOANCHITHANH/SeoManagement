@model SeoManagement.Web.Models.ViewModels.UserViewModel

<div class="container">
    <h2>My Profile</h2>
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">User Information</h5>
            <p><strong>Username:</strong> @Model.Username</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Full Name:</strong> @Model.FullName</p>
            <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("dd MMM yyyy")</p>
            <p><strong>Status:</strong> @(Model.IsActive ? "Active" : "Inactive")</p>
            <a asp-action="Index" asp-controller="Home" class="btn btn-primary">Back to Home</a>
        </div>
    </div>
</div>