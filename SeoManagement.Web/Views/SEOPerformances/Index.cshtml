@model SeoManagement.Web.Models.ViewModels.PerformanceDashboardViewModel
@{
    ViewData["Title"] = "Theo dõi Hiệu suất SEO";
}

<div class="container py-4">
    <h2 class="text-center mb-4 fw-bold">Theo dõi Hiệu suất SEO</h2>

    <div class="card shadow p-3 mb-4 rounded">
        <h4 class="mb-2">Dự án: @Model.ProjectName</h4>
        <p class="mb-1"><strong>Loại dự án:</strong> @Model.ProjectType</p>
        <p class="mb-1"><strong>Ngày bắt đầu:</strong> @Model.StartDate.ToString("dd/MM/yyyy")</p>
        <a asp-action="SelectProject" class="btn btn-outline-primary btn-sm mt-2">Chọn dự án khác</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success text-center">@TempData["Success"]</div>
    }

    <div class="card shadow p-4 mb-4">
        <h4 class="mb-3">Tổng quan</h4>
        <div class="mb-3">
            <button class="btn btn-primary" onclick="recordPerformance()">Ghi nhận hiệu suất ngay</button>
        </div>
        <div class="table-responsive">
            <table class="table table-hover table-bordered" id="urlTable">
                <thead>
                    <tr>
                        <th>Thời gian</th>
                        @if (ViewBag.ProjectType == "KeywordRankChecker")
                        {
                            <th>Thứ hạng TB</th>
                        }
                        @if (ViewBag.ProjectType == "SEOOnPage")
                        {
                            <th>Điểm On-Page TB (%)</th>
                            <th>Tốc độ Trang (%)</th>
                        }
                        @if (ViewBag.ProjectType == "PageSpeedChecker")
                        {
                            <th>Tốc độ Trang (%)</th>
                        }
                        @if (ViewBag.ProjectType == "BacklinkChecker")
                        {
                            <th>Số Backlink</th>
                        }
                        @if (ViewBag.ProjectType == "IndexChecker")
                        {
                            <th>Số trang Index</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var entry in Model.History)
                    {
                        <tr>
                            <td>@entry.RecordedAt.ToString("dd/MM/yyyy HH:mm")</td>
                            @if (ViewBag.ProjectType == "KeywordRankChecker" && entry.AverageKeywordRank.HasValue)
                            {
                                <td>@entry.AverageKeywordRank.Value.ToString("F2")</td>
                            }
                            @if (ViewBag.ProjectType == "SEOOnPage")
                            {
                                <td>@(entry.AverageOnPageScore.HasValue ? entry.AverageOnPageScore.Value.ToString("F2") : "N/A")%</td>
                                <td>@(entry.PageSpeedScore.HasValue ? entry.PageSpeedScore.Value.ToString("F2") : "N/A")%</td>
                            }
                            @if (ViewBag.ProjectType == "PageSpeedChecker" && entry.PageSpeedScore.HasValue)
                            {
                                <td>@entry.PageSpeedScore.Value.ToString("F2")%</td>
                            }
                            @if (ViewBag.ProjectType == "BacklinkChecker" && entry.BacklinkCount.HasValue)
                            {
                                <td>@entry.BacklinkCount.Value</td>
                            }
                            @if (ViewBag.ProjectType == "IndexChecker" && entry.IndexedPageCount.HasValue)
                            {
                                <td>@entry.IndexedPageCount.Value</td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <a asp-action="Index" asp-controller="SEOProjects" class="btn btn-secondary mt-3">Quay lại</a>
    </div>
</div>

@section Scripts {
    <script>

        function recordPerformance() {
            fetch('/SEOPerformances/Record?projectId=@Model.ProjectId', {
                method: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                }
            })
            .then(response => response.ok ? location.reload() : alert('Lỗi khi ghi nhận hiệu suất.'))
            .catch(error => alert('Lỗi: ' + error));
        }
    </script>
}