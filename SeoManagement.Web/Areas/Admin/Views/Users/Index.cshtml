@model SeoManagement.Web.Models.ViewModels.PagedResultViewModel<SeoManagement.Web.Models.ViewModels.UserViewModel>

<div class="page-header">
    <h3 class="fw-bold mb-3">Users</h3>
    <ul class="breadcrumbs mb-3">
        <li class="nav-home">
            <a href="#">
                <i class="icon-home"></i>
            </a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Users</a>
        </li>
        <li class="separator">
            <i class="icon-arrow-right"></i>
        </li>
        <li class="nav-item">
            <a href="#">Index</a>
        </li>
    </ul>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">Basic</h4>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="basic-datatables"
                           class="display table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Họ tên</th> 
                                <th>Email</th>
                                <th>Role</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tfoot>
                            <tr>
                                <th>ID</th>
                                <th>Họ tên</th>
                                <th>Email</th>
                                <th>Role</th>
                                <th>Ngày tạo</th>
                                <th>Trạng thái</th>
                                <th>Action</th>
                            </tr>
                        </tfoot>
                        <tbody>
                             @foreach (var user in Model.Items)
                            { 
                                 <tr> 
                                     <td>@user.UserID</td> 
                                     <td>@user.FullName</td> 
                                     <td>@user.Email</td> 
                                     <td>@user.Role</td> 
                                     <td>@user.CreatedDate.ToString("dd MMM yyyy")</td> 
                                     <td> 
                                         @if (user.IsActive) 
                                         { 
                                             <label class="badge badge-success">Active</label> 
                                         } 
                                         else 
                                         { 
                                             <label class="badge badge-danger">Inactive</label> 
                                         } 
                                     </td> 
                                     <td>
                                        <a asp-action="Edit" asp-route-id="@user.UserID" class="btn-link btn-primary"><i class="fa fa-edit"></i></a>
                                        <button onclick="confirmDelete(@user.UserID)" class="btn-link btn-danger"><i class="fa fa-times"></i></button>
                                    </td> 
                                 </tr>
                            } 
                        
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
 </div>


