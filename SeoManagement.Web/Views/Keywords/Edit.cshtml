@model SeoManagement.Web.Models.ViewModels.KeywordViewModel

@{
    ViewData["Title"] = "Chỉnh sửa từ khóa";
    var projectName = ViewBag.ProjectName ?? "Không xác định";
}

<h2>Chỉnh sửa từ khóa - Dự án: @projectName</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="KeywordID" />
    <input type="hidden" asp-for="ProjectID" />
    <input type="hidden" asp-for="CreatedDate" />

    <div class="form-group">
        <label asp-for="KeywordName" class="control-label"></label>
        <input asp-for="KeywordName" class="form-control" />
        <span asp-validation-for="KeywordName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CurrentRank" class="control-label"></label>
        <input asp-for="CurrentRank" class="form-control" />
        <span asp-validation-for="CurrentRank" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SearchVolume" class="control-label"></label>
        <input asp-for="SearchVolume" class="form-control" />
        <span asp-validation-for="SearchVolume" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Competition" class="control-label"></label>
        <input asp-for="Competition" class="form-control" />
        <span asp-validation-for="Competition" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="SearchIntent" class="control-label"></label>
        <select asp-for="SearchIntent" class="form-control">
            <option value="">Chọn ý định tìm kiếm</option>
            <option value="Informational">Informational</option>
            <option value="Navigational">Navigational</option>
            <option value="Transactional">Transactional</option>
        </select>
        <span asp-validation-for="SearchIntent" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Lưu" class="btn btn-primary" />
        <a asp-action="Index" asp-route-projectId="@Model.ProjectID" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}